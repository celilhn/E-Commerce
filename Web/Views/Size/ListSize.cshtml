@using Domain.Models
@using static Domain.Constants.Constants
@model List<Domain.Models.Size>
@{
    ViewData["Title"] = "ListSize";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container-fluid">
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Sıkça Sorulanlar Listesi</h4>
                    <p class="sub-title">
                    </p>

                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Kayıt Tarihi</th>
                                <th>Güncelleme Tarihi</th>
                                <th>Durumu</th>
                                <th>Size</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Size size in Model)
                            {
                                <tr>
                                    <td>@size.Id</td>
                                    <td>@size.InsertionDate</td>
                                    <td>@size.UpdateDate</td>
                                    <td>@size.Status</td>
                                    <td>@size.Name</td>
                                    <th>
                                        @if (size.Status == StatusCodes.Active)
                                        {
                                            <a asp-controller="Size" asp-action="DeleteSize" asp-route-Id="@size.Id"><i class="dripicons-document-delete"></i></a>
                                        }
                                    </th>
                                    <th><a asp-controller="Size" asp-action="UpdateSize" asp-route-Id="@size.Id"><i class="fas fa-edit"></i></a></th> 
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

</div>
<!-- end container-fluid -->

