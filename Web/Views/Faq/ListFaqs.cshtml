@using Domain.Models
@using static Domain.Constants.Constants
@model List<Domain.Models.Faq>
@{
    ViewData["Title"] = "ListFaqs";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container-fluid">
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Sıkça Sorulanlar Listesi</h4>
                    <p class="sub-title">
                    </p>

                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Kayıt Tarihi</th>
                                <th>Güncelleme Tarihi</th>
                                <th>Durumu</th>
                                <th>Soru</th>
                                <th>Cevap</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Faq faq in Model)
                            {
                                <tr>
                                    <td>@faq.Id</td>
                                    <td>@faq.InsertionDate</td>
                                    <td>@faq.UpdateDate</td>
                                    <td>@faq.Status</td>
                                    <td>
                                        @if(faq.Question.Length > 41)
                                        {
                                            <p>@faq.Question.Substring(0, 40).ToString()...</p>
                                        }
                                        else
                                        {
                                            <p>@faq.Question</p>
                                        }
                                    </td>
                                    <td>
                                        @if(faq.Answer.Length > 50)
                                        {
                                            <p>@faq.Answer.Substring(0, 40).ToString()...</p>
                                        }
                                        else
                                        {
                                            <p>@faq.Answer</p>
                                        }
                                    </td>
                                    <th>
                                        @if (faq.Status == StatusCodes.Active)
                                        {
                                            <a asp-controller="Faq" asp-action="DeleteFaq" asp-route-Id="@faq.Id"><i class="dripicons-document-delete"></i></a>
                                        }
                                    </th>
                                    <th><a asp-controller="Faq" asp-action="UpdateRule" asp-route-Id="@faq.Id"><i class="fas fa-edit"></i></a></th> 
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

</div>
<!-- end container-fluid -->