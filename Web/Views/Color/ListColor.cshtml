@using Domain.Models
@using static Domain.Constants.Constants
@model List<Domain.Models.Color>
@{
    ViewData["Title"] = "ListColor";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container-fluid">
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Renkler Listesi</h4>
                    <p class="sub-title">
                    </p>

                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Kayıt Tarihi</th>
                                <th>Güncelleme Tarihi</th>
                                <th>Durumu</th>
                                <th>Renk</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Color color in Model)
                            {
                                <tr>
                                    <td>@color.Id</td>
                                    <td>@color.InsertionDate</td>
                                    <td>@color.UpdateDate</td>
                                    <td>@color.Status</td>
                                    <td>@color.Name</td>
                                    <th>
                                        @if (color.Status == StatusCodes.Active)
                                        {
                                            <a asp-controller="Color" asp-action="DeleteColor" asp-route-Id="@color.Id"><i class="dripicons-document-delete"></i></a>
                                        }
                                    </th>
                                    <th><a asp-controller="Color" asp-action="UpdateColor" asp-route-Id="@color.Id"><i class="fas fa-edit"></i></a></th> 
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

</div>
<!-- end container-fluid -->